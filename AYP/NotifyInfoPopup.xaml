<Window x:Class="AYP.NotifyInfoPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AYP"
        mc:Ignorable="d" AllowsTransparency="True" WindowStyle="None" Topmost="True"
        Title="NotifyInfoPopup" Height="50" Width="500" Background="Transparent" Left="695" Top="1015" Loaded="Window_Loaded">


    <Grid RenderTransformOrigin="0,1" >

        <!-- Notification area -->
        <Border BorderThickness="1" Background="Transparent" BorderBrush="Yellow" CornerRadius="7" >
            <StackPanel>
                <TextBlock x:Name="msg" FontSize="14" Foreground="Black" TextWrapping="Wrap" Margin="0,8,0,0" VerticalAlignment="Center" HorizontalAlignment="Center">

                </TextBlock>
            </StackPanel>
        </Border>
        <Image Source="Images\uyari.png" HorizontalAlignment="Left" Height="40" Margin="10,0,0,0" VerticalAlignment="Center" Width="40"/>
    </Grid>
</Window>

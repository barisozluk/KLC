<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AYP.Styles">
    <Style x:Key="StyleRight2Panel" TargetType="{x:Type Rectangle}">
        <Setter Property="Fill" Value="#222d35" />
        <Setter Property="Height" Value="311"/>
        <Setter Property="Width" Value="362"/>
        <Setter Property="RadiusX" Value="7"/>
        <Setter Property="RadiusY" Value="7" />
        <Setter Property="Stroke" Value="Transparent" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Stroke" Value="#367bf5"/>
            </Trigger>
        </Style.Triggers>


    </Style>

</ResourceDictionary>
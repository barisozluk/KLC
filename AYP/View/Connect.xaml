<UserControl x:Class="AYP.View.Connect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AYP.View"
             mc:Ignorable="d"  Focusable="True"
             HorizontalAlignment="Left" VerticalAlignment="Top" IsHitTestVisible="True">
    <Grid x:Name="GridElement">
        <Border x:Name="AgYukuBorder" Visibility="Hidden">
            <TextBlock x:Name="AgYuku" Foreground="White" FontSize="12" FontWeight="Bold"></TextBlock>
        </Border>
        <Path x:Name="PathElement" StrokeDashCap="Round" StrokeLineJoin="Round" Stroke="{DynamicResource ColorConnect}"  StrokeDashArray="10,3" StrokeEndLineCap="Round" StrokeStartLineCap="Round">
            <Path.Data>
                <PathGeometry  x:Name="PathGeometryElement">
                    <PathFigure x:Name="PathFigureElement"  IsClosed="False">
                        <BezierSegment  x:Name="BezierSegmentElement" />
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
        <Border x:Name="UzunlukBorder">
            <TextBlock x:Name="Uzunluk" Foreground="White" FontSize="12" FontWeight="Bold"></TextBlock>
        </Border>
    </Grid>
</UserControl>
